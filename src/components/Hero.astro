---
interface Props {
  buttonText: string;
  companyName: string;
  //    logoImage:string;
}
const { buttonText, companyName } = Astro.props;

const imageURL = "hero-fitness-image.avif";
const bgStyle = {
  backgroundImage: `url('/images/${imageURL}')`,
};
---

<nav class="text-white bg-black uppercase py-8 p-4 font-bold2">
  <img src="/images/Umbral-Training.avif" alt="logo" class="mx-auto w-56" />
</nav>
<header
  class="bg-cover bg-bottom bg-no-repeat bg-blend-multiply"
  style={bgStyle}
>
  <div
    class="flex justify-center items-end px-4 mx-auto aspect-video text-center pb-8 md:pb-24 lg:pb-52 text-white"
  >
    <a href="https://wa.me/+56944032001/">
      <button class="yellowBG p-2 uppercase text-black lg:text-lg font-bold"
        >{buttonText}</button
      >
    </a>
  </div>
</header>
