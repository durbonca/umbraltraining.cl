---
interface Props {
  callToAction: string;
}

const { callToAction } = Astro.props;
const imageURL = "footer.jpg";
const bgStyle = { backgroundImage: `url('/images/${imageURL}')` };
const content = [
  {
    heading: "Redes sociales",
    info: "@Umbral_Training",
  },
  {
    heading: "Correo",
    info: "info.umbraltraining@gmail.com",
  },
  {
    heading: "Tel√©fono",
    info: "+56 9 4403 2001",
  },
];
---

<footer
  class="bg-cover bg-no-repeat bg-gray-700 bg-blend-multiply"
  style={bgStyle}
>
  <div class="mx-auto max-w-screen-xl">
    <h1
      class="font-extrabold text-5xl yellowText tracking-wide uppercase italic pl-12 py-36 max-w-xl"
    >
      {callToAction}
    </h1>
    <div class="yellowBG grid grid-cols-1 md:grid-cols-3">
      {
        content.map((item) => (
          <div class="p-12">
            <h1 class="uppercase text-2xl italic">{item.heading}</h1>
            <p>{item.info}</p>
          </div>
        ))
      }
    </div>
  </div>
</footer>
